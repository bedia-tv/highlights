{
  "short_name": "Highlight Extension",
  "name": "Highlight Chrome Extension",
  "manifest_version": 2,
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://*.youtube.com/*"]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs",
    "webRequest",
    "cookies",
    "dns",
    "webRequestBlocking"
  ]
}
